
      {{#each posts as |post| }}
      <section class="blog-post">
        <div class="blog-title">
          <a href="/post/{{post.id}}">{{title}}</a>
        <p>Posted by: {{username}} on {{format_date date_created}}</p>
        </div>
        <div class="blog-content">
         <p>{{content}}</p>
        </div>
         </section>
      {{#if comment}}
      <p>Comment is working</p>
        {{/if}}

    {{/each}}
    

 
